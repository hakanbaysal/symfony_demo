{% extends '::blog.html.twig' %}

{% block body -%}

<div class="container">
    <h1>Post list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>Publishedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.body }}</td>
                <td>{% if entity.publishedAt %}{{ entity.publishedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                        <a href="{{ path('post_show', { 'id': entity.id }) }}" class="btn btn-success">show</a>
                    
                        <a href="{{ path('post_edit', { 'id': entity.id }) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a href="{{ path('post_new') }}" class="btn btn-primary">
                Create a new entry
            </a>
<br /><br />
</div>
    {% endblock %}
